{
  "manifest_version": 3,
  "name": "ChatGPT Equation Renderer",
  "description": "Display equations in ChatGPT using Latex notation",
  "version": "1.1.1",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "permissions": ["activeTab"],
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["./content.js"],
      "matches": ["*://chat.openai.com/*"],
      "run_at": "document_end"
    },
    {
      "css": ["./content.css"],
      "matches": ["*://chat.openai.com/*"],
      "run_at": "document_start"
    }
  ]
}
